<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.meteor"
		name="Game Boy Advance (Meteor)"
		version="1.4.0"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.gba" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>Game Boy Advance</platforms>
		<extensions>gba</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<supports_keyboard>false</supports_keyboard>
		<supports_mouse>false</supports_mouse>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Game Boy Advance (Meteor) v1.4 a309da7</summary>
		<description>Meteor is a Nintendo Gameboy Advance emulator.

Supported files: .gba

Authors: Philippe Daouadi &lt;p.daouadi@free.fr&gt;, Hans-Kristian Arntzen (libretro port and fixes) &lt;maister@archlinux.us&gt;</description>
		<license>GPLv3</license>
		<platform>@PLATFORM@</platform>
	</extension>
</addon>